<script type="text/javascript" language="javascript">
    function JavascriptFunction() {
        var url = '@Url.Action("Details", "EmailTemplate")';
        $("#divLoading").show();
        $.post(url, null,
                function (data) {
                    $("#PID")[0].innerHTML = data;
                    $("#divLoading").hide();
                });
    }
</script>
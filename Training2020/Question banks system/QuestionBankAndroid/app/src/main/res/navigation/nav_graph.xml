<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.questionbankandroid.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_showQuestionFragment"
            app:destination="@id/showQuestionFragment" />
        <action
            android:id="@+id/action_homeFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_homeFragment_self"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_thanhTuuFragment"
            app:destination="@id/thanhTuuFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.questionbankandroid.ui.quiz.QuizFragment"
        android:label="Example"
        tools:layout="@layout/quiz_fragment" >
        <argument
            android:name="theme"
            app:argType="string" />
        <argument
            android:name="number"
            app:argType="integer" />
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/quizFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.questionbankandroid.ui.result.ResultFragment"
        android:label="Result"
        tools:layout="@layout/result_fragment" >
        <argument
            android:name="diem"
            app:argType="integer" />
        <argument
            android:name="tongdiem"
            app:argType="integer" />
        <argument android:name="ngaylam"
            app:argType="string" />
        <action
            android:id="@+id/action_resultFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/showQuestionFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_resultFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="thoigianlam"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.questionbankandroid.ui.detail.DetailFragment"
        android:label="detail_fragment"
        tools:layout="@layout/detail_fragment" >
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="ngaylam"
            app:argType="string" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/showQuestionFragment"
        android:name="com.example.questionbankandroid.ui.questionshow.ShowQuestionFragment"
        android:label="ShowQuestionFragment" >
        <action
            android:id="@+id/action_showQuestionFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
        <argument
            android:name="image"
            app:argType="string" />
        <argument
            android:name="theme"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.questionbankandroid.ui.changepass.ChangePasswordFragment"
        android:label="Change Password">
        <action
            android:id="@+id/action_changePasswordFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/thanhTuuFragment"
        android:name="com.example.questionbankandroid.ui.thanhtuu.ThanhTuuFragment"
        android:label="ThanhTuuFragment" >
        <action
            android:id="@+id/action_thanhTuuFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>